<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAboutCountry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/_3dp"
        card_view:cardCornerRadius="@dimen/card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/twentysp"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:paddingStart="@dimen/_5dp"
                android:paddingEnd="@dimen/_5dp"
                tools:text="Murdochs needed couselling  after hackel scandal, says Magzine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tvTitle">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/twelvesp"
                    android:textColor="@color/gray"
                    android:textStyle="normal"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingEnd="@dimen/_5dp"
                    tools:text="New York: The British phone-hacking scandal brought simmering tensions." />

                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="0.5"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/ivChevron"
                    android:layout_width="@dimen/chevron_width"
                    android:layout_height="@dimen/chevron_height"
                    android:layout_margin="@dimen/tendp"
                    android:src="@drawable/ic_arrow_forward" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
